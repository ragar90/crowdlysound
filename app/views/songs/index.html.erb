<h1>Listing songs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Remove', song, method: :delete, data: { confirm: 'Are you sure you want to remove this song?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

