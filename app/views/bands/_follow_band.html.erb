<%= hidden_field_tag :follow_band_id, @band.id %>
<% if !@current_musician.currently_follows_band(@band) %>
	<%= link_to "Follow", 'javascript:void(0)', :data => {:follow => "follow"} , :class => "follow_bottom follow"%>
<% else %>
	<%= link_to "Unfollow", 'javascript:void(0)', :data => {:follow => "unfollow"} , :class => "follow_bottom unfollow"%>
<% end %>