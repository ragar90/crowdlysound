<div id="page_container" class="bands">
	<%= render :partial => "header_user_info" , :object =>  @current_musician%>

<div id="band_content">
	<p id="notice"><%= notice %></p>
	<div class="center_page">
		<h1 class="simple_title" >
			<%= @band.name %>
		</h1>

		<p>
		  <strong>Description:</strong>
		  <%= @band.description %>
		</p>

		<div id="follow_band">
			<%= render :partial => "follow_band" %>
		</div>

		<% if @current_musician.leader_of(@band.id) %>
			<div class="ui-widget" id="new_member_block">
			  <label for="add_member">New member: </label>
			  <input id="add_member" data-band="<%= @band.id %>" />
			  <input type="button" id="add_member_btn" value="Add" />
			</div>
		<% end %>

		<div id="band_members">
			<%= render :partial => "musician", :collection => @band.members %>
		</div>

		<div id="band_songs">
			<%= render :partial => "song", :collection => @band.songs %>
		</div>

		<%= link_to "New song", new_band_song_path(@band.id) %>

		<% if @band.includes_member?(@current_musician.id) && @current_musician.leader_of(@band.id) %>
			<%= link_to 'Edit band', edit_band_path(@band) %>
		<% end %>
	</div>
</div>
</div>